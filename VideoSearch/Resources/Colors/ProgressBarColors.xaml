<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VideoSearch.Resources.Colors">

    <!-- ProgressBar colors -->
    <Color x:Key="ProgressBarLightColor">#FF343433</Color>
    <Color x:Key="ProgressBarMediumColor">#FF3A3A39</Color>
    <Color x:Key="ProgressBarDarkColor">#FF323231</Color>

    <Color x:Key="ProgressBarIndicatorColor">#FFFFC25B</Color>

    <Color x:Key="ProgressBarBorderLightColor">#FF2D2D2D</Color>
    <Color x:Key="ProgressBarBorderMediumColor">#FF5B5B5A</Color>

    <LinearGradientBrush x:Key="ProgressBarIndicatorAnimatedFill"
                     StartPoint="0,0"
                     EndPoint="1,0">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#FF343433"
                    Offset="0" />
                <GradientStop Color="#FFFFC25B"
                    Offset="0.5" />
                <GradientStop Color="#FF343433"
                    Offset="1" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
</ResourceDictionary>