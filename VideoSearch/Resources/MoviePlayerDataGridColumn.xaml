<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VideoSearch.Resources">

    <!-- 
    ***********
    * columns *
    ***********
    -->
    
    <!-- AddingTime -->
    <DataTemplate x:Key="AddingTimeColumnTemplate" >
        <Grid Margin="-1">
            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="16" Height="18" TextAlignment="Center" Margin="4,0" TextTrimming="CharacterEllipsis" />
        </Grid>
    </DataTemplate>

