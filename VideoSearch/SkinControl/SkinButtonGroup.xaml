<UserControl x:Class="VideoSearch.SkinControl.SkinButtonGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VideoSearch.SkinControl"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300" Background="#FF312F29" IsEnabledChanged="OnIsEnabledChanged">
    <Grid>
        <Grid Name="bottom_bar" Height="25" VerticalAlignment="Bottom" Background="#FF292723">
            <TextBlock Name="Caption" Text="TextBlock" TextAlignment="Center" Padding="0,4,0,0" FontSize="16" Foreground="#FFF8F8F8" Background="#00000000" />
        </Grid>
        <Grid Height="67" Margin="0,4,0,0" Name="separator" VerticalAlignment="Top" HorizontalAlignment="Right" Width="1" Background="#FF616161" />
    </Grid>
</UserControl>
