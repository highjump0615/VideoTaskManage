<Window x:Class="VideoSearch.Windows.MovieSummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoSearch.Windows"
        xmlns:SkinControl="clr-namespace:VideoSearch.SkinControl" 
        xmlns:SkinFrame="clr-namespace:VideoSearch.SkinFrame" 
        mc:Ignorable="d"
        Title="视频摘要" Height="469" Width="754" 
        ShowInTaskbar="False" ResizeMode="NoResize" WindowStyle="None" 
        Background="#00000000" AllowsTransparency="True" 
        WindowStartupLocation="CenterScreen" Topmost="False"  
        MouseLeftButtonDown="OnSettingRegion"
        MouseMove="OnUpdateRegion">
    
    <Grid Name="WindowContent">
        <SkinFrame:DialogFrame Margin="0" x:Name="windowFrame" />
        <Grid Margin="0,25,0,0" Name="ContentView">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="500*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Border Background="#FF464646" BorderBrush="#FF262626" BorderThickness="0,1" />

                <Grid Height="32" Margin="140,0">

                    <TextBlock HorizontalAlignment="Left" Text="视频任务"  FontFamily="Arial" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    <TextBox Name="TaskNameEditor" Text=""
                             Padding="8" Width="356"  
                             TextAlignment="Left" HorizontalAlignment="Right"
                             FontFamily="Arial" FontSize="14" 
                             Background="#FF646361" BorderBrush="#FF262626" Foreground="White"  />
                </Grid>
            </Grid>

            <Grid Grid.Row="1">
                <!-- right -->
                <Grid x:Name="OutlineGrid" Width="400" HorizontalAlignment="Right" Margin="0,26,20,20">
                    <Image x:Name="Thumbnail" Margin="1" Stretch="UniformToFill"  IsHitTestVisible="False"
                           Source="/VideoSearch;component/Resources/Images/View/MovieProcess/Default_Movie.png"/>
                    <Border BorderBrush="#FF262626" BorderThickness="1"/>
                    <SkinControl:RegionEditor x:Name="RegionEditor"/>
                    <TextBlock x:Name="ThumbName" HorizontalAlignment="Left" Margin="10,15,0,0" Text="09月15日 14时22分58秒 - 14时22分59秒" VerticalAlignment="Top" FontFamily="Arial" FontSize="12" Foreground="White" IsHitTestVisible="False"/>
                </Grid>

                <Grid Margin="20,20,0,20" Width="270" HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70*"/>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="70*"/>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="70*"/>
                        <RowDefinition Height="125*"/>
                    </Grid.RowDefinitions>

                    <!-- left : Sensitivity -->
                    <Grid Grid.Row="0">
                        <Border BorderBrush="#FF262626" BorderThickness="1" Margin="0,7,0,0" />
                        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" TextAlignment="Center" Text="参数设定" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Width="80" Foreground="White" Background="#FF403F3A"/>

                        <Grid Margin="40,10,15,0" VerticalAlignment="Center" Height="26">

                            <TextBlock Text="场景模式" FontFamily="Arial" FontSize="14" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <ComboBox Name="CboSensitivity" FontFamily="Arial" FontSize="14" Foreground="#FFDEDCDB" Text="" Style="{DynamicResource BlueFrameComboBox}" 
                                      Grid.Column="2" Grid.Row="7"  Grid.ColumnSpan="4" SelectedIndex="0" Width="126" HorizontalAlignment="Right">
                                <ComboBoxItem Content="晴天" />
                                <ComboBoxItem Content="阴天" />
                                <ComboBoxItem Content="黑夜" />
                            </ComboBox>

                        </Grid>
                    </Grid>

                    <!-- left : Search Region -->
                    <Grid Grid.Row="2">
                        <Border BorderBrush="#FF262626" BorderThickness="1" Margin="0,7,0,0" />
                        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" TextAlignment="Center" Text="检索区域" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Width="80" Foreground="White" Background="#FF403F3A"/>

                        <Button VerticalAlignment="Center" HorizontalAlignment="Center" 
                                Width="86" Height="26" Margin="0,10,0,0" 
                                Foreground="White" FontFamily="Arial" FontSize="14" 
                                Style="{DynamicResource BlueFrameButtonStyle}" 
                                Content="重画" Click="OnResetRegion" />
                    </Grid>

                    <!-- left : Region Setting -->
                    <Grid Grid.Row="4">
                        <Border BorderBrush="#FF262626" BorderThickness="1" Margin="0,7,0,0" />
                        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" TextAlignment="Center" Text="区域设置" VerticalAlignment="Top" FontFamily="Arial" FontSize="14" Width="80" Foreground="White" Background="#FF403F3A"/>

                        <CheckBox x:Name="ChkInclude" Checked="OnSelectRegionType" VerticalContentAlignment="Center" HorizontalAlignment="Right" Content="包含" Foreground="White" FontFamily="Arial" FontSize="14" Padding="4,-1,0,0" Margin="0,10,96,0" VerticalAlignment="Center"/>
                        <CheckBox x:Name="ChkExclude" Checked="OnSelectRegionType" VerticalContentAlignment="Center" HorizontalAlignment="Right" Content="排除" Foreground="White" FontFamily="Arial" FontSize="14" Padding="4,-1,0,0" Margin="0,10,26,0" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- left : Dialog Buttons -->
                    <Grid Grid.Row="5" HorizontalAlignment="Right" Width="190" Height="33" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="85*" />
                        </Grid.ColumnDefinitions>
                        <Button Content="取消" Name="btnCancel" Foreground="White" FontFamily="Arial" FontSize="14" Focusable="False" IsCancel="True" Style="{DynamicResource BrownButtonStyle}">
                        </Button>
                        <Button Content="提交" Name="btnSave" Foreground="White" FontFamily="Arial" FontSize="14" Grid.Column="2" Focusable="False" Click="OnApply" Style="{DynamicResource GreenButtonStyle}">
                        </Button>
                    </Grid>

                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>
